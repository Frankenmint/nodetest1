::selection
	background-color firebrick
	color #fff

::-moz-selection
	background-color steelblue
	color #fff

body
	background linear-gradient(top, white, black)
	padding 5em
	font 16px/1.625 'Lucinda Grande', Helvetica, Arial, sans-serif
	color #555

	h2
		margin 0 0 0.5em 0
	a
		color #00b7ff
	#wrapper
		position relative
		padding 0 0 0 312px

		#userList
			margin 16px 0 30px 0
			table
				border-collapse separate
				border-spacing 1px
				background-color #ccc
				th
					background-color #eee
					font-weight 600
					padding 10px 20px
					text-align center
				tbody
					padding 0
					margin 0
					border-collapse collapse
					border-spacing 0
					td
						background-color #fff
						padding 5px 10px
						text-align center

		#userInfo
			width 250px
			position absolute
			top 0
			left 0
			p
				padding 15px
				border 1px solid #ccc
				background-color rgba(80, 120, 255, 0.5);

		fieldset
			border 0
			padding 0
			margin 0

		#addUser
			width 80%
			max-width 480px
			min-width 465px
			padding 1em
			label
				margin-right 1em
			input[type='text']
				margin 0 1em
			.loc
				margin-right 1.75em
			.age
				margin-right 1.75em
			.gender
				margin-right .25em
			button#btnAddUser
				margin-top 2em
			border 1px solid #ccc
			border-radius 5px
